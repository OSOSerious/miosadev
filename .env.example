# MIOSA Configuration Template
# Copy this file to .env and update with your actual values

# Application
APP_NAME=MIOSA
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=postgresql://miosa_user:miosa_password@localhost:5432/miosa_db
# Alternative SQLite for quick start:
# DATABASE_URL=sqlite:///./miosa.db

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379/0

# Groq Configuration
GROQ_API_KEY=your-groq-api-key-here
GROQ_MODEL=llama-3.1-8b-instant
# Available models (auto-fallback enabled - system will try next if one fails):
# llama-3.1-8b-instant - Fast and reliable (recommended)
# llama-3.2-3b-preview - Smallest, fastest
# llama-3.2-11b-vision-preview - Mid-size with vision
# llama-3.2-90b-vision-preview - Most powerful
# gemma2-9b-it - Google's Gemma 2
# llama3-groq-8b-8192-tool-use-preview - Tool use capable

# Security
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173","http://localhost:8000"]

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAILS_FROM_EMAIL=noreply@miosa.ai
EMAILS_FROM_NAME=MIOSA

# Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# Frontend URL (for CORS and redirects)
FRONTEND_URL=http://localhost:5173

# Admin
FIRST_SUPERUSER_EMAIL=admin@miosa.ai
FIRST_SUPERUSER_PASSWORD=changethis123

# External APIs (optional)
PINECONE_API_KEY=your-pinecone-key-here
PINECONE_ENVIRONMENT=your-environment
PINECONE_INDEX_NAME=miosa-index

# Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=False

# Feature Flags
ENABLE_WEBSOCKETS=True
ENABLE_BACKGROUND_TASKS=True
ENABLE_RATE_LIMITING=True